@model CloudGoClub.Models.Game

@{
    ViewBag.Title = "Game - " + Model.BlackPlayer.UserName + " vs " + Model.WhitePlayer.UserName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.DisplayFor(model => model.BlackPlayer, "Player") vs @Html.DisplayFor(model => model.WhitePlayer, "Player")</h2>

<p>
    @Html.ActionLink("Back to games list", "Index")
</p>

<div ng-app='gameEngine'>
    <board size='@Model.GameRequest.BoardSize.X'></board>
</div>

@section scripts
{
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/Game/Polyfills.js"></script>
    <script src="~/Scripts/Game/AdditionalMethods.js"></script>
    <script src="~/Scripts/Game/Color.js"></script>
    <script src="~/Scripts/Game/Point.js"></script>
    <script src="~/Scripts/Game/Group.js"></script>
    <script src="~/Scripts/Game/Board.js"></script>
    <script src="~/Scripts/Game/Move.js"></script>
    <script src="~/Scripts/Game/angular/game-module.js"></script>
    <script src="~/Scripts/Game/angular/board.js"></script>
    <script src="~/Scripts/Game/angular/board-point.js"></script>
}