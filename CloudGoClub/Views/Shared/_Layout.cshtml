<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PlanetGO - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="header">
        <a href="@Url.Action("Index","Home")" class="hidden-xs logo"><img src="~/Pictures/planet-go-logo.png" class="img-responsive" /></a>
    </div>
    <div id="layoutContainer" class="row">
        <div class="col col-xs-2 hidden-xs">
            <nav class="navbar sidebar-nav navbar-default">
                <div class="container">
                    @*<div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>*@
                    @*<div class="navbar-collapse collapse">*@
                        <ul class="nav navbar-nav">
                            <li><a href="@Url.Action("Index","Home")"><span class="glyphicon glyphicon-home"></span> Home &nbsp;</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-fire"></span> Challenges &nbsp;</a></li>
                            <li><a href="@Url.Action("Index","Games")"><span class="glyphicon glyphicon-tower"></span> Games &nbsp;</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-stats"></span> Tournaments &nbsp;</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-user"></span> Players &nbsp;</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-question-sign"></span> FAQ &nbsp;</a></li>
                        </ul>
                    @*</div>*@
                </div>
            </nav>
        </div>
        <div class="col col-xs-12 col-sm-8">
            <main>
                @RenderBody()
            </main>
        </div>
        <div class="col col-xs-2 hidden-xs">
            <footer>
                &copy; @DateTime.Now.Year - PlanetGO
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>