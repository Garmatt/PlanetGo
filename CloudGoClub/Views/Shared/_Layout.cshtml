<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PlanetGO - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="hidden-xs">
                    <div>
                        <a href="@Url.Action("Index","Home")" class="logo"><img src="~/Pictures/planet-go-logo.png" class="img-responsive" /></a>
                    </div>
                    <nav>
                        <ul class="nav nav-pills nav-stacked">
                            <li><a href="@Url.Action("Index","Home")"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-fire"></span> Challenges</a></li>
                            <li><a href="@Url.Action("Index","Games")"><span class="glyphicon glyphicon-tower"></span> Games</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-stats"></span> Tournaments</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-user"></span> Players</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-question-sign"></span> FAQ</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="visible-xs">
                    Small menu
                </div>
            </div>
            <div class="col-sm-6">
                <div class="hidden-xs">Language selection</div>
                <main>
                    @RenderBody()
                </main>
            </div>
            <div class="col-sm-3">
                <div class="hidden-xs">@Html.Partial("_LoginPartial")</div>
                <div>Social</div>
                <footer>
                    &copy; @DateTime.Now.Year - PlanetGO
                </footer>
            </div>
        </div>
    </div>


